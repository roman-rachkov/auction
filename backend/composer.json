{
  "name": "landingguru/easy-auction",
  "description": "learning project with Slim and React",
  "type": "project",
  "config": {
    "process-timeout": 0,
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "App\\": "src"
    }
  },
  "authors": [
    {
      "name": "Roman Rachkov",
      "email": "pakycb84@gmail.com"
    }
  ],
  "minimum-stability": "stable",
  "require": {
    "php": "^8.1",
    "ext-json": "*",
    "php-di/php-di": "^6.3",
    "slim/psr7": "^1.5",
    "slim/slim": "^4.9",
    "symfony/console": "^6.0"
  },
  "require-dev": {
    "overtrue/phplint": "^4.0",
    "roave/security-advisories": "dev-master",
    "squizlabs/php_codesniffer": "3.*",
    "vimeo/psalm": "^4.22"
  },
  "scripts": {
    "lint": "phplint",
    "cs-check": "phpcs",
    "cs-fix": "phpcbf",
    "psalm": "psalm",
    "app": "php bin/app.php --ansi"
  }
}
